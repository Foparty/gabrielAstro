---
import type { Image } from 'astro:assets';
import { navigation } from '../data/navlinks.ts';
---

<header class="navarea">
  <h2 class="text-center md:text-right">Gabriel Asdr√∫bal</h2>
  <nav class="nav flex md:flex-col md:text-right">
    {navigation.slice(0, 2).map((item) => <a href={item.url}>{item.title}</a>)}
    {
      navigation
        .slice(2, navigation.length)
        .map((item) => <a href={item.url}>{item.title}</a>)
    }
  </nav>
